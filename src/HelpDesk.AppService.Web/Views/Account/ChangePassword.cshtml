@model ChangePasswordViewModel
@using HelpDesk.AppService.Web.Controllers
@using HelpDesk.AppService.Web.Models.AccountViewModels

@{
    ViewData["Title"] = "Account settings - Change Password";
}

@* ************** Content ************** *@
<h4 class="py-3 mb-4">
    <span class="text-muted fw-light">Account Settings /</span> Security
</h4>

<div class="row">
    <div class="col-md-6">
        <div class="card">
            <h5 class="card-header">Change Password</h5>
            <!-- Change Password -->
            <div class="card-body">
                <div class="mb-3 col-12 mb-0">
                    <div class="alert alert-info">
                        <h6 class="alert-heading mb-1">Are you sure you want to change your password?</h6>
                        <p class="mb-0">Once you change your password, you will need to log in again.</p>
                    </div>
                </div>
                <form id="formChangePassword" class="account-forms" asp-action="@nameof(AccountController.ChangePassword)" method="POST">
                    <input type="hidden" asp-for="Email" />
                    <div class="mb-3 form-password-toggle">
                        <label class="form-label" asp-for="Password">Password</label>
                        <div class="input-group input-group-merge">
                            <input type="password" class="form-control" asp-for="Password" placeholder="&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;" aria-describedby="password" />
                            <span class="input-group-text cursor-pointer"><i class="bx bx-hide"></i></span>
                        </div>
                        <span asp-validation-for="Password" class="error"></span>
                    </div>

                    <div class="mb-3 form-password-toggle">
                        <label class="form-label" asp-for="ConfirmPassword">Confirm Password</label>
                        <div class="input-group input-group-merge">
                            <input type="password" class="form-control" asp-for="ConfirmPassword" placeholder="&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;" aria-describedby="password" />
                            <span class="input-group-text cursor-pointer"><i class="bx bx-hide"></i></span>
                        </div>
                        <span asp-validation-for="ConfirmPassword" class="error"></span>
                    </div>

                    <div class="mt-3">
                        <button type="submit" class="btn btn-danger me-2">Save Changes</button>
                        <button type="reset" class="btn btn-outline-secondary">Cancel</button>
                    </div>
                </form>
            </div>
            <!-- /Change Password -->
        </div>
    </div>
</div>
