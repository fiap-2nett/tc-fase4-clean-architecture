@using HelpDesk.AppService.Web.Controllers
@using Microsoft.AspNetCore.Identity

<ul class="navbar-nav">

@if (User?.Identity?.IsAuthenticated ?? false)
{
    <li class="nav-item">
        <a  class="nav-link text-dark" asp-controller="Home" asp-action="@nameof(HomeController.Index)" title="Manage">Hello @User.Identity?.Name!</a>
    </li>
    <li class="nav-item">
        <form class="form-inline" asp-controller="Account" asp-action="@nameof(AccountController.Logout)" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
            <a class="nav-link text-dark" asp-controller="Account" asp-action="@nameof(AccountController.Register)">Register</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark" asp-controller="Account" asp-action="@nameof(AccountController.Login)">Login</a>
    </li>
}
</ul>
